<%- include('layouts/header'); -%>

<link rel="stylesheet" href="/style.css">

<body>
  <%- include('layouts/adminNav'); -%>

  <div class="container">
    <h1>Page List</h1>
    <table class="page-table">
      <thead>
        <tr>
          <th>Page Name</th>
          <th>Manage</th>
        </tr>
      </thead>
      <tbody>
        <% pages.forEach(page => { %>
        <tr>
          <td><%= page.title%></td>
          <td>
            <a href="/edit-page/<%= page._id %>">Edit</a>
            <a href="/delete-page/<%= page._id %>">Delete</a>
          </td>
        </tr>
        <% }); %>
      </tbody>
    </table>
  </div>

</body>

<%- include('layouts/footer'); -%>